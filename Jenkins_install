#!/bin/bash

# Update system packages
sudo yum update -y

# Install Amazon Corretto 11 JDK
sudo curl -o /etc/yum.repos.d/corretto.repo https://d1wlpr80wptf8b.cloudfront.net/corretto/11/amazon-corretto-11.repo
sudo yum install java-11-amazon-corretto-devel -y

# Verify Java installation
java -version

# Add Jenkins repository and GPG key
sudo wget -O /etc/yum.repos.d/jenkins.repo https://pkg.jenkins.io/redhat/jenkins.repo
sudo rpm --import https://pkg.jenkins.io/redhat/jenkins.io.key

# Install Jenkins
sudo yum install jenkins -y

# Start Jenkins service
sudo systemctl start jenkins

# Enable Jenkins to start on boot
sudo systemctl enable jenkins

# Display the Jenkins unlock password
echo "Jenkins unlock password:"
sudo cat /var/lib/jenkins/secrets/initialAdminPassword

# Inform user of next steps
echo "Jenkins installation complete. Access Jenkins at http://your-ec2-public-ip:8080"
